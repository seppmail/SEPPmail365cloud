{
    "Name"                         : "[SEPPmail.cloud] Appliance -> ExchangeOnline",
    "Comment"                      : "Accept E-Mails from SEPPmail.cloud",

    "routing":
    {
        "seppmail":
        {
            "CloudServicesMailEnabled"     : true,
            "ConnectorSource"              : "Default",
            "ConnectorType"                : "OnPremises",
            "Enabled"                      : true,
            "RequireTls"                   : true,
            "SenderDomains"                : "*"
        },
        "M365":
        {
            "CloudServicesMailEnabled"     : false,
            "ConnectorSource"              : "Default",
            "ConnectorType"                : "Partner",
            "Enabled"                      : true,
            "RequireTls"                   : true,
            "SenderDomains"                : "*"
        }
    },
    "Option":
    {
       "NoAntiSpamWhiteListing": false
    }
}
